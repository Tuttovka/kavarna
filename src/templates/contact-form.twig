{% extends '_base.twig' %}

{% block title %}
    Booking –
    {{ parent() }}
{% endblock %}

{% block activeItemBooking %}
    active
{% endblock %}


{% block content %}

    <div class="container">
        <div class="row">
            <form action="https://formspree.io/makazda90@gmail.com" class="mb-5 col-md-8" method="POST">
                <h1>Booking</h1>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputName">Name</label>
                        <input class="form-control" id="inputName" name="Name" placeholder="John Hipster" required type="text">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputPhone">Phone</label>
                        <input class="form-control" id="inputPhone" name="Phone" placeholder="Phone number" type="text">
                    </div>

                    <div class="form-group col-md-6">
                        <label for="inputE-mail">E-mail</label>
                        <input class="form-control" id="inputE-mail" name="E-mail" placeholder="john.hipster@gmail.com" type="email">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputDate">Date</label>
                        <input class="form-control" id="inputDate" name="Date" required type="date">
                    </div>

                    <div class="form-group col-md-6">
                        <label for="inputTime">Time</label>
                        <input class="form-control" id="inputTime" name="Time" required type="time">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="inputSeats">Number of seats</label>
                        <select class="form-control" id="inputSeats" name="Seats" required>
                            <option selected>Choose…</option>
                            <option value="1 seat">1</option>
                            <option value="2 seats">2</option>
                            <option value="3 seats">3</option>
                            <option value="4 seats">4</option>
                            <option value="5 seats">5</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputNote">Note</label>
                        <textarea class="form-control" id="inputNote" name="Note" rows="3"></textarea>
                    </div>
                </div>
                <div class="form-check mb-5">
                    <input class="form-check-input" id="gridCheck" name="Agreement" required type="checkbox">
                    <label class="form-check-label" for="gridCheck">
                        I agree to the processing of personal data
                    </label>
                </div>
                <button class="btn btn-primary btn-lg" type="submit">Send</button>
            </form>
        </div>
    </div>
{% endblock %}
